<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.redravencomputing.flaborfit.MainActivity">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_corners"
    android:backgroundTint="#2ca5f5"
        android:layout_weight="1"
        android:layout_marginBottom="5dp"
        android:id="@+id/weightBtn">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/weight"
        android:layout_marginTop="165dp"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

        <TextView
            android:text="30%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="40sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:paddingRight="5dp"
            android:textColor="#FFF" />

        <TextView
            android:text="Do you even lift?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:paddingLeft="5dp"
            android:textSize="18sp"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignParentStart="true"
            android:paddingBottom="5dp"
            android:textColor="#FFF" />

        <TextView
            android:text="Weight Lifting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="24sp"
            android:paddingLeft="5dp"
            android:textStyle="normal|bold"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:paddingBottom="25dp"
            android:textColor="#FFF" />

        <TextView
            android:text="10 Sets"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="24sp"
            android:gravity="right"
            android:padding="5dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#20000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:textColor="#FFF" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#916bcd"
        android:layout_weight="1"
        android:id="@+id/yogaBtn">

        <TextView
            android:text="Yoga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textSize="24sp"
            android:paddingLeft="5dp"
            android:layout_alignBottom="@+id/imageView1"
            android:layout_alignParentStart="true"
            android:textStyle="normal|bold"
            android:layout_alignParentBottom="true"
            android:paddingBottom="25dp"
            android:textColor="#FFF" />

        <TextView
            android:text="Namaste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:paddingLeft="5dp"
            android:textSize="18sp"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignParentStart="true"
            android:paddingBottom="5dp"
            android:textColor="#FFF" />

        <TextView
            android:text="1 hour"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/textView9"
            android:textSize="24sp"
            android:gravity="right"
            android:padding="5dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#20000000"
            android:textColor="#FFF" />

        <TextView
            android:text="15%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textSize="40sp"
            android:paddingRight="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textColor="#FFF" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/lotus"
            android:id="@+id/imageView1"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#52ad56"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:id="@+id/cardioBtn">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/heart"
            android:layout_marginTop="165dp"
            android:id="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:text="Cardio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:textSize="24sp"
            android:paddingLeft="5dp"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_alignParentStart="true"
            android:textStyle="normal|bold"
            android:layout_alignParentBottom="true"
            android:paddingBottom="25dp"
            android:textColor="#FFF" />

        <TextView
            android:text="Run Like Crazy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:paddingLeft="5dp"
            android:textSize="18sp"
            android:layout_alignBaseline="@+id/textView10"
            android:layout_alignBottom="@+id/textView10"
            android:layout_alignParentStart="true"
            android:paddingBottom="5dp"
            android:textColor="#FFF" />

        <TextView
            android:text="22%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:textSize="40sp"
            android:paddingRight="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textColor="#FFF" />

        <TextView
            android:text="5 miles"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:textSize="24sp"
            android:gravity="right"
            android:padding="5dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#20000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:textColor="#FFF" />
    </RelativeLayout>

</LinearLayout>
